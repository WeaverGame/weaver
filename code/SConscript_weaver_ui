dll_src = [
'#weaver/code/ui/ui_syscalls.c'
]

ui_env = env.Clone()

if env['arch'] == 'linux-i386':
	ui_env.SharedLibrary('ui', [ui_src, dll_src], LIBS=['m'])
	ui_env.InstallAs('#weaver/uii386.so', 'libui.so')

elif env['arch'] == 'linux-x86_64':
	ui_env.SharedLibrary('ui', [ui_src, dll_src], LIBS=['m'])
	ui_env.InstallAs('#weaver/uix86_64.so', 'libui.so')

elif env['arch'] == 'sdl':
	ui_env.SharedLibrary('ui', [ui_src, dll_src], LIBS=['m'])
	ui_env.InstallAs('#weaver/ui.so', 'libui.so')

elif env['arch'] == 'freebsd-i386':
	ui_env.SharedLibrary('ui', [ui_src, dll_src], LIBS=['m'])
	ui_env.InstallAs('#weaver/uii386.so', 'libui.so')

elif env['arch'] == 'win32-mingw':
	ui_env.SharedLibrary('ui', [ui_src, dll_src], LIBS=['m'])
	ui_env.InstallAs('#weaver/uix86.dll', 'ui.dll')

elif env['arch'] == 'darwin-ppc':
	ui_env.SharedLibrary('ui', [ui_src, dll_src], LIBS=['m'])
	ui_env.InstallAs('#weaver/uiippc.dylib', 'libui.dylib')

elif env['arch'] == 'darwin-i386':
	ui_env.SharedLibrary('ui', [ui_src, dll_src], LIBS=['m'])
	ui_env.InstallAs('#weaver/uii386.dylib', 'libui.dylib')
